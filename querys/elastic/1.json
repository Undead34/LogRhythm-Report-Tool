{
  "id": "6e867b27-ad83-4c4d-bc41-8af86dc5989a",
  "name": "Top: General Attackers",
  "description": "<DescripciÃ³n de la consulta>",
  "mode": "single",
  "index": ["logs-*"],
  "aggregation_result": true,
  "type": "3",
  "query": {
    "size": 0,
    "query": {
      "bool": {
        "must": [
          {
            "query_string": {
              "query": "impactedLocationName: * AND impactedIp: * AND msgClassName: attack AND isEvent: true AND {{entity_ids}}",
              "analyze_wildcard": true,
              "default_field": "*"
            }
          },
          {
            "range": {
              "normalDate": {
                "gte": "{{gte}}",
                "lte": "{{lte}}",
                "format": "epoch_millis"
              }
            }
          }
        ]
      }
    },
    "aggs": {
      "top_origin_ips": {
        "terms": {
          "field": "originIp",
          "size": 500,
          "order": {
            "_count": "desc"
          }
        },
        "aggs": {
          "top_hits": {
            "top_hits": {
              "size": 1,
              "stored_fields": [
                "normalDate",
                "priority",
                "impactedPort",
                "msgSourceTypeName",
                "protocolName",
                "originIp",
                "severity",
                "msgClassName",
                "originPort",
                "directionName",
                "impactedLocationName",
                "impactedIp",
                "logSourceName"
              ]
            }
          }
        }
      }
    }
  }
}
