{
  "id": "7f43c88b-60a0-444a-93f9-ef80cb8473f8",
  "name": "top_ip_impacted_by_attackers",
  "description": "Realiza una búsqueda y agregación en los índices de logs para detectar los eventos de ataques más recientes, filtrando por ubicación impactada, IP impactada y tipo de mensaje.",
  "mode": "single",
  "index": [
    "logs-*"
  ],
  "aggregation_result": true,
  "type": "3",
  "query": {
    "size": 0,
    "query": {
      "bool": {
        "must": [
          {
            "query_string": {
              "query": "impactedLocationName: * AND impactedIp: * AND msgClassName: attack AND isEvent: true AND {{entity_ids}}",
              "analyze_wildcard": true,
              "default_field": "*"
            }
          },
          {
            "range": {
              "normalDate": {
                "gte": "{{gte}}",
                "lte": "{{lte}}",
                "format": "epoch_millis"
              }
            }
          }
        ]
      }
    },
    "aggs": {
      "top_origin_ips": {
        "terms": {
          "field": "impactedIp",
          "size": 500,
          "order": {
            "_count": "desc"
          }
        },
        "aggs": {
          "top_hits": {
            "top_hits": {
              "size": 1,
              "stored_fields": [
                "normalDate",
                "priority",
                "impactedPort",
                "msgSourceTypeName",
                "protocolName",
                "originIp",
                "severity",
                "msgClassName",
                "originPort",
                "directionName",
                "impactedLocationName",
                "impactedIp",
                "logSourceName"
              ]
            }
          }
        }
      }
    }
  }
}