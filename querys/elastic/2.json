{
  "id": "337fb1d3-a5be-4f20-9928-f662ae002910",
  "name": "top_events_vulnerability_analysis",
  "description": "Realiza una búsqueda y agregación en los índices de logs para detectar los eventos relacionados con vulnerabilidades más recientes, filtrando por el nombre de la clase de mensaje, el nombre común del evento, y asegurando que el campo CVE esté presente y sea un evento válido.",
  "mode": "single",
  "index": [
    "logs-*"
  ],
  "aggregation_result": true,
  "type": "3",
  "query": {
    "size": 0,
    "query": {
      "bool": {
        "must": [
          {
            "query_string": {
              "query": "cve:/.*cve-[0-9]{4}-[0-9]{4,}.*/ AND isEvent: true AND {{entity_ids}}",
              "analyze_wildcard": true,
              "default_field": "*"
            }
          },
          {
            "range": {
              "normalDate": {
                "gte": "{{gte}}",
                "lte": "{{lte}}",
                "format": "epoch_millis"
              }
            }
          }
        ]
      }
    },
    "aggs": {
      "top_cve": {
        "terms": {
          "field": "cve",
          "size": 500,
          "order": {
            "_count": "desc"
          }
        },
        "aggs": {
          "top_hits": {
            "top_hits": {
              "size": 1,
              "stored_fields": [
                "commonEventName",
                "cve",
                "directionName",
                "entityName",
                "impactedIp",
                "impactedPort",
                "isEvent",
                "logSourceName",
                "msgClassName",
                "msgClassTypeName",
                "msgSourceTypeName",
                "priority",
                "severity",
                "vendorMessageId",
                "logSourceName",
                "originName"
              ]
            }
          }
        }
      }
    }
  }
}